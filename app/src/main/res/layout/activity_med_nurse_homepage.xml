<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgtwo"
    tools:context=".MedNurseHomepage">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Invisible balancing view -->
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible" />

        <!-- Center text -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nurse"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/cor"
            android:textSize="28sp" />

        <!-- Real home icon -->
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home" />
    </LinearLayout>

    <!-- Content (No ScrollView) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Calendar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="16dp">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weekDayTextAppearance="@style/CalendarWeekText"
                android:dateTextAppearance="@style/CalendarDateText"
                android:focusedMonthDateColor="@color/blue"
                android:selectedWeekBackgroundColor="@color/blue"
                android:weekSeparatorLineColor="@color/blue"
                android:unfocusedMonthDateColor="@color/dark_grey"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Prescription Button -->
            <LinearLayout
                android:id="@+id/prescription"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_button"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/home"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prescription"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Elderly Registration Button -->
            <LinearLayout
                android:id="@+id/elderRegister"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_button"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/elderlyregistration"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elderly Registration"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Running Notes Button -->
            <LinearLayout
                android:id="@+id/runningNotes"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_button"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/runningnotes"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running Notes"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:menu="@menu/bottom_nav_menu"/>
</LinearLayout>
