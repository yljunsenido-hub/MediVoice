<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    android:padding="14dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- BASIC SECTION (always visible) -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtBasicName"
                android:text="Elder Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtBasicAge"
                android:text="Age: 00"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp" />
        </LinearLayout>


        <!-- EXPANDABLE SECTION (hidden by default) -->
        <LinearLayout
            android:id="@+id/expandSection"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- PERSONAL INFO -->
            <TextView
                android:id="@+id/txtGender"
                android:text="Gender:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtBirthday"
                android:text="Birthday:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCivilStatus"
                android:text="Civil Status:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtHomeAddress"
                android:text="Address:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <!-- PRIMARY CONTACT -->
            <TextView
                android:id="@+id/txtPrimaryContactPerson"
                android:text="Primary Contact:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPrimaryRelationship"
                android:text="Relationship:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPrimaryContactNumber"
                android:text="Contact No:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <!-- SECONDARY CONTACT -->
            <TextView
                android:id="@+id/txtSecondaryContactPerson"
                android:text="Secondary Contact:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtSecondaryRelationship"
                android:text="Relationship:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtSecondaryContactNumber"
                android:text="Contact No:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- HEALTH INFO -->
            <TextView
                android:id="@+id/txtAllergies"
                android:text="Allergies:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCognitiveStatus"
                android:text="Cognitive Status:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDisabilities"
                android:text="Disabilities:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- REGISTERED BY -->
            <TextView
                android:id="@+id/txtNurseName"
                android:text="Registered by:"
                android:textStyle="italic"
                android:paddingTop="10dp"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
