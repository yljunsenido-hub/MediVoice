<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MedNursePrescription">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDICATION PRESCRIPTION"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- CARD: MEDICATION DETAILS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- NAME OF THE ELDERLY (Dropdown/Spinner) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME OF THE ELDERLY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerElderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:padding="8dp"
                    android:layout_marginBottom="10dp" />

                <!-- MEDICATION NAME -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEDICATION NAME"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etMedicationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter medication name"
                    android:background="@drawable/input_bg"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp" />

                <!-- DOSAGE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOSAGE"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etDosage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., 1 tablet, 5 mL"
                    android:background="@drawable/input_bg"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp" />

                <!-- SCHEDULE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCHEDULE (EX. 3 TIMES A DAY)"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., 3 times a day"
                    android:background="@drawable/input_bg"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- NEW: TIME FIELD TO DISPLAY SELECTED TIME -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIME"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tap SET ALARM to choose time"
                    android:background="@drawable/input_bg"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_marginBottom="12dp" />

                <!-- SET ALARM BUTTON -->
                <Button
                    android:id="@+id/btnSetAlarm"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="SET ALARM"
                    android:background="@drawable/button"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black" />

                <!-- SEND TO (Dropdown + Button) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEND TO"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerSendTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_bg"
                        android:padding="8dp"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnSendTo"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="SEND TO"
                        android:background="@drawable/button"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-black" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <!-- TEXT INFO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IF THE ELDERLY IS UNDER OBSERVATION FILL UP THIS FORM."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- CARD: OBSERVATION FORM -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- NAME OF THE ELDERLY (Dropdown/Spinner) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME OF THE ELDERLY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerObsElderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:padding="8dp"
                    android:layout_marginBottom="10dp" />

                <!-- TO BE MONITORED -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TO BE MONITORED (EX. EVERY HOUR)"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etToBeMonitored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., Every hour, Every 30 mins"
                    android:background="@drawable/input_bg"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- SEND TO (Dropdown + Button) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEND TO"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerObsSendTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnObsSendTo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="SEND TO"
                    android:background="@drawable/button"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
