<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    tools:context=".Login">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/welcomepagepic" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:text="Log in, Your health journey continues sign in to view your records and updates."
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="55dp"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:orientation="horizontal"
        android:padding="13dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_email" /> <!-- your email icon -->

        <EditText
            android:id="@+id/emailPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your e-mail address"
            android:background="@android:color/transparent"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Password Field -->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:orientation="horizontal"
        android:padding="13dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/outline_lock_24" /> <!-- your lock icon -->

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@android:color/transparent"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:textSize="16sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="320dp"
        android:layout_height="47dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:text="Login" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="320dp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-black"
        android:layout_height="47dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:text="Register" />

</LinearLayout>
